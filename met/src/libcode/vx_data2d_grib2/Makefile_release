########################################################################
#
# Makefile for the vx_data2d_grib2 library
#
########################################################################


EXECUTABLES =


OBJECTS     = var_info_grib2.o \
              data2d_grib2.o


LIBRARIES   = libvx_data2d_grib2.a


########################################################################


HEADERS     = var_info_grib2.h \
              data2d_grib2.h


########################################################################


all: $(OBJECTS) $(LIBRARIES) $(EXECUTABLES)
	@ echo
	@ echo "*** Finished Making the vx_data2d_grib2 Library ***"
	@ echo


########################################################################


   ##
   ##  objects
   ##


var_info_grib2.o: var_info_grib2.cc
	$(CXX) var_info_grib2.cc $(CXX_FLAGS) -c -I$(MET_INC_DIR) $(GRIB2C_INCS)

data2d_grib2.o: data2d_grib2.cc
	$(CXX) data2d_grib2.cc $(CXX_FLAGS) -c -I$(MET_INC_DIR) $(GRIB2C_INCS)


########################################################################


   ##
   ##  libraries
   ##


libvx_data2d_grib2.a: $(OBJECTS)
	ar -rs libvx_data2d_grib2.a $(OBJECTS) 2>&1
	ranlib libvx_data2d_grib2.a
	cd $(MET_INC_DIR) ; rm -f $(HEADERS)
	cp $(HEADERS) $(MET_INC_DIR)
	rm -f $(MET_LIB_DIR)/libvx_data2d_grib2.a
	cp libvx_data2d_grib2.a $(MET_LIB_DIR)


########################################################################


clean:
	rm -f *.a *.o temp junk core a.out $(OBJECTS) $(LIBRARIES) $(EXECUTABLES)
	cd $(MET_INC_DIR) ; rm -f $(HEADERS)
	rm -f $(MET_LIB_DIR)/libvx_data2d_grib2.a


########################################################################


.PHONY: all clean


########################################################################

