  <!--                                    -->
  <!--  pcp_combine -sum                  -->
  <!--                                    -->

  <test name="pcp_combine_sum_GRIB1">
    <exec>&MET_BIN;/pcp_combine</exec>
    <param> \
      20120409_00 3 20120409_18 18 \
      &OUTPUT_DIR;/pcp_combine/nam_2012040900_F018_APCP18.nc \
      -pcpdir &DATA_DIR_MODEL;/grib1/nam
