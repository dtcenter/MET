//
// Output model name to be written
//
model = "WRF";

//
// Output description to be written
// May be set separately in each "obs.field" entry
//
desc = "${DESCRIPTION}";

////////////////////////////////////////////////////////////////////////////////

//
// Verification grid
//
regrid = {
   to_grid = NONE;
   method  = NEAREST;
   width   = 1;
}

////////////////////////////////////////////////////////////////////////////////

mpr_column  = [];
mpr_thresh  = [];
cnt_thresh  = [ NA ];
cnt_logic   = UNION;
wind_thresh = [ NA ];
