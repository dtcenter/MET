   dmap   = NONE;
   seeps  = NONE;
}

//
// NetCDF matched pairs output file
//
nc_pairs_flag = {
   latlon       = FALSE;
   raw          = TRUE;
   diff         = FALSE;
   climo        = TRUE;
   climo_cdp    = FALSE;
   weight       = TRUE;
   nbrhd        = FALSE;
