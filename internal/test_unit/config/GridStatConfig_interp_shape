//
// Forecast and observation fields to be verified
//
fcst = {
   field = [ { name = "TMP"; level = [ "Z2" ]; } ];
}
obs = fcst;

////////////////////////////////////////////////////////////////////////////////

//
// Verification masking regions
//
mask = {
   grid = [ "FULL" ];
   poly = [ ];
}

////////////////////////////////////////////////////////////////////////////////

//
// Confidence interval settings
//
ci_alpha  = [ 0.10, 0.05 ];

boot = {
   interval = PCTILE;
   rep_prop = 1.0;
   n_rep    = 0;
   rng      = "mt19937";
   seed     = "1";
}

////////////////////////////////////////////////////////////////////////////////

//
// Data smoothing methods
//
interp = {
   field      = FCST;
   vld_thresh = 1.0;
   shape      = ${SHAPE};

   type = [
      { method = NEAREST;  width = 1;  },
      { method = UW_MEAN;  width = 11; },
      { method = MIN;      width = 11; },
      { method = MAX;      width = 11; },
      { method = GAUSSIAN; width = 1;  },
      { method = MAXGAUSS; width = 11; }
   ];
}

////////////////////////////////////////////////////////////////////////////////

