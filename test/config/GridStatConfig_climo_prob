//
// Forecast and observation fields to be verified
//
fcst = {

   cat_thresh = ==0.1;

   field = [
      {
        name = "PROB"; level = "Z10";
        prob = { name = "WIND"; thresh_lo = 12.89; };
      },
      {
        name = "PROB"; level = "Z2";
        prob = { name = "TMP"; thresh_hi = 273.0; };
      },
      {
        name = "PROB"; level = "Z2";
        prob = { name = "TMP"; thresh_lo = 298.8; };
      },
      {
        name = "PROB"; level = "Z10";
        prob = { name = "WIND"; thresh_lo = 12.89; };
      }
   ];
}

obs = {

   field = [
      {
        name = "WIND"; level = "Z10";
        cat_thresh = >12.89;
      },
      {
        name = "TMP"; level = "Z2";
        cat_thresh = <273.0;
      },
      {
        name = "TMP"; level = "Z2";
        cat_thresh = >298.8;
      },
      {
        name = "WIND"; level = "Z10";
        cat_thresh = >12.89;
      }
   ];
}

////////////////////////////////////////////////////////////////////////////////

//
// Climatology mean data
//
climo_mean = obs;
climo_mean = {

   file_name = [ ${CLIMO_MEAN_FILE_LIST} ];

   regrid = {
      method     = BILIN;
      width      = 2;
      vld_thresh = 0.5;
   }

   time_interp_method = DW_MEAN;
   day_interval       = ${DAY_INTERVAL};
   hour_interval      = 6;
}

//
// Climatology standard deviation data
//
