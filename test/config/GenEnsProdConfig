//
// Ensemble fields to be processed
//
ens = {
   ens_thresh = 0.80;
   vld_thresh = 1.0;

   field = [
      {
         name          = "REFC";
         level         = [ "L0" ];
         cat_thresh    = [ >=35.0 ];
