model = "WRF";

//
// Output observation type to be written
//
obtype = "ANALYS";

////////////////////////////////////////////////////////////////////////////////

//
// Verification grid
//
regrid = {
   to_grid = NONE;
   method  = NEAREST;
   width   = 1;
}

////////////////////////////////////////////////////////////////////////////////

cnt_thresh  = [ NA ];
cnt_logic   = UNION;
wind_thresh = [ NA ];
wind_logic  = UNION;

//
// Forecast and observation fields to be verified
//
fcst = {

   field = [
      { name = "TMP";   level = [ "Z2" ];  cat_thresh = [ <273, >=273     ];
                                           cnt_thresh = [ <273, >=273, NA ];
                                           cnt_logic  = INTERSECTION;        },
      { name = "DPT";   level = [ "Z2" ];  cat_thresh = [ <260, >=260 ];     },
      { name = "UGRD";  level = [ "Z10" ]; cat_thresh = [ <5, >=5 ];         },
      { name = "VGRD";  level = [ "Z10" ]; cat_thresh = [ <5, >=5 ];         },
      { name = "WIND";  level = [ "Z10" ]; cat_thresh = [ <5, >=5 ];         }
   ];

}
obs = fcst;

////////////////////////////////////////////////////////////////////////////////

//
// Verification masking regions
//
mask = {
   grid = [ "DTC165", "DTC166" ];
   poly = [ ];  // [ "${TEST_OUT_DIR}/gen_vx_mask/CONUS_poly.nc",
                //   "MET_BASE/poly/LMV.poly" ];
}

////////////////////////////////////////////////////////////////////////////////

//
