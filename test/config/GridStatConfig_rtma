   interval = PCTILE;
   rep_prop = 1.0;
   n_rep    = 0;
   rng      = "mt19937";
   seed     = "1";
}

////////////////////////////////////////////////////////////////////////////////

//
// Interpolation methods
//
interp = {
   field      = FCST;
   vld_thresh = 1.0;

   type = [
      { method = NEAREST; width  = 1; },
      { method = UW_MEAN; width  = 3; },
      { method = MIN;     width  = 1; },
      { method = MAX;     width  = 3; }
   ];
}

////////////////////////////////////////////////////////////////////////////////

